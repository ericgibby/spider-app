{
	"name": "spider-app",
	"version": "0.1.0",
	"private": true,
	"homepage": "https://ericgibby.github.io/spider-app",
	"repository": "https://github.com/ericgibby/spider-app.git",
	"dependencies": {
		"react": "^16.13.1",
		"react-dom": "^16.13.1",
		"react-router-dom": "^5.2.0",
		"tailwindcss": "^1.4.6",
		"web-vitals": "^0.2.2"
	},
	"devDependencies": {
		"@craco/craco": "^5.6.4",
		"@testing-library/jest-dom": "^5.9.0",
		"@testing-library/react": "^10.2.1",
		"@testing-library/user-event": "^12.0.2",
		"@types/jest": "^25.0.0",
		"@types/node": "^12.0.0",
		"@types/react": "^16.9.0",
		"@types/react-dom": "^16.9.0",
		"@types/react-router-dom": "^5.1.5",
		"autoprefixer": "^9.8.4",
		"husky": "^4.2.5",
		"lint-staged": "^10.2.11",
		"prettier": "^2.0.5",
		"pretty-quick": "^2.0.1",
		"react-scripts": "3.4.1",
		"typescript": "^3.9.5"
	},
	"scripts": {
		"start": "craco start",
		"build": "craco build",
		"test": "craco test",
		"eject": "react-scripts eject",
		"format": "prettier --config .prettierrc --ignore-path \"node_modules/**\" --write \"**/*.{css,html,js,json,scss,ts,tsx}\"",
		"lint": "eslint \"src/**/*.{js,ts,tsx}\""
	},
	"eslintConfig": {
		"extends": "react-app"
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"lint-staged": {
		"*.(css|html|js|json|scss|ts|tsx)": "pretty-quick --staged --config .prettierrc"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	}
}
